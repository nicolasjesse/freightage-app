<div class="companies-wrapper">
  <% if @companies.any? %>
    <% @companies.each do |company| %>
      <div class="company-card">
        <div class="brand-name"><%= company.brand_name %></div>
      </div>
    <% end %>
  <% else %>
    <div class="empty-warn">No companies registered</div>
  <% end %>
</div>