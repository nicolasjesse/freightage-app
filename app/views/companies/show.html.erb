<div class="show-company">
  <h1><%= I18n.t("pages.companies.show.title") %></h1>

  <div class="company-details">
    <div class="info-wrapper">
      <div class="info-title">Corporate Name: </div>
      <div class="info-value"><%= @company.corporate_name %></div>
    </div>
    <div class="info-wrapper">
      <div class="info-title">Brand Name: </div>
      <div class="info-value"><%= @company.brand_name %></div>
    </div>
    <div class="info-wrapper">
      <div class="info-title">Email Domain: </div>
      <div class="info-value"><%= @company.email_domain %></div>
    </div>
    <div class="info-wrapper">
      <div class="info-title">CNPJ: </div>
      <div class="info-value"><%= @company.cnpj %></div>
    </div>
    <div class="info-wrapper">
      <div class="info-title">Address: </div>
      <div class="info-value"><%= @company.address %></div>
    </div>
    <h1>Prices</h1>
    <div class="prices-wrapper">
      <% @company.prices.each do |price| %>
        <table class="company-price">
          <tr class="price-section">
            <th class="price-section-title">Weight (mg)</th>
            <th class="price-section-title">Volume (mÂ³)</th>
            <th class="price-section-title">Value/KM</th>
          </tr>
          <tr class="price-section">
            <td class="price-section-info">
              <%= price.min_product_weight %> to
              <%= price.max_product_weight %>
            </td>
            <td class="price-section-info">
              <%= price.min_product_volume %> to
              <%= price.max_product_volume %>
            </td>
            <td class="price-section-info"><%= price.value_by_km %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>