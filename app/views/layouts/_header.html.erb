<header class="app-header">
  <div class="header-title"><%= I18n.t("pages.layouts.header.title") %></div>
  <nav class="header-nav">
    <div class="nav-button"><%= link_to I18n.t("pages.layouts.header.track"), track_service_order_path %></div>
    <% if user_signed_in? %>
      <div class="nav-button"><%= link_to I18n.t("pages.layouts.header.home"), root_path %></div>
      <% if current_user.user_type == 'admin' %>
        <div class="nav-button"><%= link_to I18n.t("pages.layouts.header.search_prices"), search_prices_path %></div>
        <div class="nav-button"><%= link_to I18n.t("pages.layouts.header.service_orders_admin"), service_orders_path %></div>
        <div class="nav-button"><%= link_to I18n.t("pages.layouts.header.companies"), companies_path %></div>
      <% elsif current_user.user_type == 'company_member' %>
        <div class="nav-button"><%= link_to I18n.t("pages.layouts.header.vehicles"), company_vehicles_path(current_user.company.id) %></div>
        <div class="nav-button"><%= link_to I18n.t("pages.layouts.header.service_orders_user"), service_orders_path %></div>
      <% end %>
      <div><%= current_user.email %></div>
      <div class="nav-button">
        <%= button_to I18n.t("pages.layouts.header.logout"), destroy_user_session_path, method: :delete %>
      </div>
    <% else %>
      <div class="nav-button"><%= link_to I18n.t("pages.layouts.header.login"), new_user_session_path %></div>
    <% end %>
  </nav>
</header>